<mvc:View
   controllerName="sap.ui.demo.wt.controller.app"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc"
   displayBlock="true">
        	   <Panel
                  headerText="{i18n>helloPanelTitle2}"
                  class="sapUiResponsiveMargin"
				  width="auto">
                  <content>       
               		<Text text="UserName"
               		class="sapUiSmallMargin"/>
				    <Input
						value="{/recipient}"
						valueLiveUpdate="true"
						width="60%"/>
					<Button
						text="Say Hello"
						press="onShowHello"
						class="sapUiSmallMarginEnd"/>
					<Button
						text="{/recipient}"
						press="Showi18n"
						class="sapUiSmallMarginEnd"/>
					</content>
               </Panel>
        	  
 </mvc:View>